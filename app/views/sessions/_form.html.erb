<%= form_tag(session_path) do |f| %>

<form class="form-horizontal" role="form">
	
	<div class="form-group">
		<%= label_tag :email %>
		<div class="input-group">
			<%= email_field_tag :email, nil, size: 80, required: true, class: 'form-control' %>
		</div>
	</div>

	<div class="form-group">
		<%= label_tag :password %>
		<div class="input-group">
			<%= password_field_tag :password, nil, size: 80, required: true,class: 'form-control' %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="btn-group">
			<%= submit_tag "Sign In", class: "btn btn-lg btn-primary" %>
		</div>
	</div>

</form>
<% end %>
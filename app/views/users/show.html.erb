<div class="header">
	<h1><%= @user.name %></h1>
</div>
	
	<div>
		<p>Member since: <%= @user.created_at.strftime('%B %Y') %></p>
	</div>

	<hr>

	<% if @favorite_projects.any?  %>
	<h3> <%= @user.name %>'s favorite projects: <%= @favorite_projects.size %> </h3>
		<% @favorite_projects.each do |project| %>
			<div>
				<%= link_to project.name, project %>
			</div>
		<% end %>
	<% end %>

	<hr>

	<h3><%= @user.name %>'s pledges: <%= @pledges.size %></h3>

	<% @pledges.each do |p| %>
		<div><%= link_to p.comment, p.project, id: "pledge-#{p.id}" %>, created <%= time_ago_in_words(p.created_at) %> ago</div>
	<% end %>

	<hr>

<% if current_user?(@user) %>
	<footer>
		<nav>
			<%= link_to "Edit Account", edit_user_path(@user), class: 'btn btn-primary' %>
			<%= link_to 'Delete Account', @user, 
                method: :delete, 
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %>
		</nav>
	</footer>
<% end %>

</article>
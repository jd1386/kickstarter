
<%= form_for [@project, @pledge] do |f| %>

<form class="form-horizontal" role="form">
<h3>Make your pledge</h3>
	<%= render 'shared/error', object: @pledge %>

	<div class="form-group">
	<%= f.label :amount, class: '' %><br>
		<% Pledge::AMOUNTS.each do |amount| %>
			<label class="radio-inline">
				<%= f.radio_button :amount, amount %> <%= amount %>
			</label>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label :comment, class: '' %><br>
		<div class="input-group">
			<%= f.text_field :comment, class: 'form-control', size: 50 %>
		</div>
	</div>


	<div class="form-group">
		<div class="btn-group">
			<%= f.submit 'Pledge Now!', class: "btn btn-lg btn-success" %>
		</div>
	</div>

</form>
<% end %>
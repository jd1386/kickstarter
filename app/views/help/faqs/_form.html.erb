<%= form_for @faq do |f| %>

	<div class="form-group">
		<%= f.label :title, class: 'col-sm-2 control-label' %>
		<div class="input-group">
			<%= f.text_field :title, size: 180, class: 'form-control' %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :description, class: 'col-sm-2 control-label' %>
		<div class="input-group">
			<%= f.text_area :description, cols: 140, rows: 20, class: 'form-control' %>
		</div>
	</div>

	<div class="form-group">
		<div class="btn-group">
			<%= f.submit 'Add FAQ', class: "btn btn-primary" %>
		</div>
	</div>
<% end %>